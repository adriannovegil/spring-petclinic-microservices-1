<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>spring-petclinic-microservices</artifactId>
    <groupId>org.springframework.samples</groupId>
    <version>1.5.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>spring-petclinic-load</artifactId>
  <build>
    <sourceDirectory>src/main/scala</sourceDirectory>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>scala-maven-plugin</artifactId>
        <version>3.3.1</version>
        <executions>
          <execution>
            <goals>
              <goal>compile</goal>
              <goal>testCompile</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <args>
            <arg>-deprecation</arg>
            <arg>-feature</arg>
          </args>
          <scalaCompatVersion>2.12</scalaCompatVersion>
          <scalaVersion>2.12.3</scalaVersion>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-source-plugin</artifactId>
        <version>3.0.1</version>
        <executions>
          <execution>
            <id>attach-sources</id>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>buildDocker</id>
      <build>
        <plugins>
          <plugin>
            <groupId>com.spotify</groupId>
            <artifactId>docker-maven-plugin</artifactId>
            <version>0.4.13</version>
            <executions>
              <execution>
                <phase>install</phase>
                <goals>
                  <goal>build</goal>
                </goals>
                <configuration>
                  <imageName>openapm/spring-petclinic-load</imageName>
                  <dockerDirectory>/Users/awe/Git/spring-petclinic-microservices/spring-petclinic-load/src/main/docker</dockerDirectory>
                  <resources>
                    <resource>
                      <targetPath>/</targetPath>
                      <directory>/Users/awe/Git/spring-petclinic-microservices/spring-petclinic-load/target</directory>
                      <include>spring-petclinic-load.jar</include>
                    </resource>
                  </resources>
                  <buildArgs>
                    <ARTIFACT_NAME>spring-petclinic-load</ARTIFACT_NAME>
                  </buildArgs>
                  <imageTags>
                    <imageTag>opencensus-showcase</imageTag>
                  </imageTags>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <imageName>openapm/spring-petclinic-load</imageName>
              <dockerDirectory>/Users/awe/Git/spring-petclinic-microservices/spring-petclinic-load/src/main/docker</dockerDirectory>
              <resources>
                <resource>
                  <targetPath>/</targetPath>
                  <directory>/Users/awe/Git/spring-petclinic-microservices/spring-petclinic-load/target</directory>
                  <include>spring-petclinic-load.jar</include>
                </resource>
              </resources>
              <buildArgs>
                <ARTIFACT_NAME>spring-petclinic-load</ARTIFACT_NAME>
              </buildArgs>
              <imageTags>
                <imageTag>opencensus-showcase</imageTag>
              </imageTags>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>io.gatling</groupId>
      <artifactId>gatling-app</artifactId>
      <version>2.3.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>
